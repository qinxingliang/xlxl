/* 轮播图 */
.swiper-wrap {

  }
  .swiper-box {
    height: 800rpx;
  }
  .swiper-img {
    width: 100%;
    height: 900rpx;

  }
  .title{
      margin: 30rpx 20rpx;
      font-weight: bold;
  }
  .box1{
      display: flex;
      flex-direction: row;
      align-items: center;
      margin: 20rpx;
  }
  .jifen{
      color: rgb(255,121,0);
      font-weight: bold;
      font-size: 38rpx;
  }
  .price{
      color: grey;
      text-decoration: line-through;
      margin-left: 30rpx;
  }
  .box2{
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      margin: 20rpx;
      color: grey;
  }
  .address{
      margin: 20rpx;
      color: grey;
  }
  .title2{
      text-align: center;
      color: rgb(255,121,0);
      width: 200rpx;
      font-weight: bold;
      margin-left: 280rpx;
      padding-bottom: 20rpx;
      border-bottom: 5rpx solid rgb(255,121,0);
  }
  .dui{
      position: fixed;
      bottom: 0;
      width: 100%;
      text-align: center;
      background-color: rgb(13,164,8);
      padding: 20rpx 40rpx;
      color: white;
  }