.graceActionSheet {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}

.graceActionSheetBody {
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
    left: 0;
    overflow: hidden;
}

.graceActionSheetTitle {
    text-align: center;
    font-size: 26rpx;
    line-height: 120rpx;
    height: 120rpx;
    font-weight: bold;
    border-bottom: 1px solid #F8F8F8;
}

.grace-ipx-bottom {
    padding-bottom: 50rpx!important;
}

.graceActionSheetList {
    line-height: 120rpx;
    font-weight: 600;
    overflow: hidden;
    text-align: center;
    margin: 0 30rpx;
    border-bottom: 1px solid #F8F8F8;
}

.grace-shade-in {
    animation: grace-shade-in-a 280ms ease-in forwards;
}

@keyframes grace-shade-in-a {
    0% {
        bottom: -500px;
        opacity: 0;
    }

    100% {
        bottom: 0px;
        opacity: 1;
    }
}