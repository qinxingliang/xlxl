.grace-img {
    width: 300rpx;
    min-height: 100rpx;
    overflow: hidden;
    font-size: 0;
    position: relative;
}

.grace-img-loading {
    position: absolute;
    left: 0;
    top: 0;
    background-color: #F8F8F8;
    font-size: 80rpx;
    color: #999999;
    text-align: center;
}

.grace-shade-out {
    animation: grace-shade-out-a 300ms ease-out forwards;
}

@keyframes grace-shade-out-a {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.grace-icons {
    font-family: "grace-iconfont";
}

.icon-image:before {
    content: "\e63a";
}