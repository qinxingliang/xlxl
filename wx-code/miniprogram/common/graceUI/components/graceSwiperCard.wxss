.grace-swiper-card-item {
    box-sizing: border-box;
    font-size: 0;
    overflow: hidden;
}

.grace-swiper-card-image {
    width: 100%;
}

.grace-swiper-card-img-small {
    transform: scaleY(0.88);
    opacity: 0.8;
    transform-origin: center center;
}

.grace-swiper-card-img-big {
    transform: scaleY(1);
    opacity: 1;
    transform-origin: center center;
    transition: 300ms linear;
}